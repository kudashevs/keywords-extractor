{
    "name": "kudashevs/keywords-extractor",
    "description": "A flexible and customizable PHP library that extracts relevant keywords from text.",
    "type": "library",
    "keywords": ["php", "keywords", "keywords extractor", "keywords generator"],
    "license": "MIT",
    "authors": [
        {
            "name": "Sergey Kudashev",
            "email": "kudashevs@gmail.com",
            "homepage": "https://kudashevs.com",
            "role": "developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-mbstring": "*",
        "kudashevs/rake-php": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1|^11.0"
    },
    "autoload": {
        "psr-4": {
            "Kudashevs\\KeywordsExtractor\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Kudashevs\\KeywordsExtractor\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html build/coverage"
    }
}
